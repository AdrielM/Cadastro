<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_adicionar_produto"
    tools:context="com.example.adriel.cadastro.Atividades.AdicionarProduto">


    <TextView
        android:id="@+id/titulo"
        android:textSize="30dp"
        android:text="@string/addProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/nome"
        android:hint="@string/nomeProduto"
        android:layout_below="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/valor"
        android:hint="Valor"
        android:layout_below="@+id/nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/quantidade"
        android:hint="Quantidade em estoque"
        android:layout_below="@+id/valor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:inputType="number" />

    <EditText
        android:id="@+id/descricao"
        android:hint="Descrição"
        android:layout_below="@+id/quantidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:inputType="textMultiLine" />



    <Button
        android:id="@+id/salvar"
        android:text="Salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
     />


</LinearLayout>
